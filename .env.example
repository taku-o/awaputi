# Environment configuration for BubblePop game
# Copy this file to .env.local and fill in your values

# Build configuration
NODE_ENV=development
VITE_BASE_PATH=./

# Development server
VITE_DEV_PORT=3000
VITE_DEV_HOST=true
VITE_PREVIEW_PORT=4173
VITE_PREVIEW_HOST=true

# HTTPS (optional)
VITE_HTTPS=false

# Analytics
VITE_ANALYTICS_ENABLED=false
VITE_GA_TRACKING_ID=
VITE_PLAUSIBLE_DOMAIN=

# Error tracking
VITE_SENTRY_DSN=

# Deployment
NETLIFY_SITE_ID=
NETLIFY_AUTH_TOKEN=
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Performance monitoring
VITE_PERFORMANCE_MONITORING=true

# Feature flags
VITE_ENABLE_PWA=false
VITE_ENABLE_OFFLINE=true