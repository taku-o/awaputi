{
  "name": "bubble-pop-web-game",
  "version": "1.0.0",
  "description": "A web-based bubble popping game with various bubble types and special effects",
  "type": "module",
  "scripts": {
    "test": "jest --run",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --run",
    "test:e2e": "playwright test --reporter=list",
    "test:performance": "node tests/performance/performance-test.js",
    "test:all": "npm run test && npm run test:e2e && npm run test:performance",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@jest/environment-jsdom": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "canvas": "^2.11.2",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "vite": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/main.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ]
  },
  "keywords": ["game", "bubble", "canvas", "web", "javascript"],
  "author": "BubblePop Team",
  "license": "MIT"
}